		},
		"isotropic_scattering_medium": {
			"type": "object",
			"required": [ "name", "type", "absorption_color", "absorption_at_distance", "scattering_distance" ],
			"properties": {
				"name": {
					"description": "",
					"type": "string"
				},
				"type": {
					"description": "",
					"type": "string",
					"enum": [ "isotropic_scattering" ]
				},
				"absorption_color": {
					"description": "",
					"$ref": "#/definitions/float3"
				},
				"absorption_at_distance": {
					"description": "",
					"type": "number"
				},
				"scattering_distance": {
					"description": "",
					"type": "number"
				}
			}
		},

