					"enum": [ "lmf" ]
				},
				"file_path": {
					"description": "",
					"type": "string"
				},
				"material": {
					"description": "",
					"type": "string"
				},
				"transform": {
					"description": "",
					"$ref": "#/definitions/float4x4"
				},
				"emission": {
					"description": "",
